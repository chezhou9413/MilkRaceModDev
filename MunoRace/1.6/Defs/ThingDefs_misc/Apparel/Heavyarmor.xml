<?xml version="1.0" encoding="utf-8"?>
<Defs>
    
  	<!--以下为服装-->

	<ThingDef ParentName="MunoRace_Apparel">
  	<defName>MunoRace_Apparel_Heavyarmor</defName>
    <label>重型动力甲</label>
    <description>一件重型动力甲，集成了多种功能，能够让使用者在各种环境进行活动，强化使用者的运动能力.</description>
	<possessionCount>1</possessionCount>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>  <!--研发项目-->
      <displayPriority>215</displayPriority>   <!--显示等级-->
    </recipeMaker>
    <graphicData>
   	<texPath>Apparel/Heavyarmor/MunoRace_Apparel_Heavyarmor</texPath> <!--物件的贴图路径-->
	<graphicClass>Graphic_Single</graphicClass>
	<drawSize>1.1</drawSize>    <!--物品渲染大小-->
	</graphicData>
	<costList> <!--固定制作材料-->
      <ComponentSpacer>4</ComponentSpacer>
      <Plasteel>100</Plasteel>
      <Uranium>20</Uranium>
   	</costList>
	<statBases>  <!--工作量 防护 保温等-->   
	<MaxHitPoints>350</MaxHitPoints>
	<WorkToMake>60000</WorkToMake>
	<Mass>6</Mass>
	<ArmorRating_Blunt>0.45</ArmorRating_Blunt> <!--写死钝击防护-->
    <ArmorRating_Sharp>1.06</ArmorRating_Sharp> <!--写死利器防护-->
	<ArmorRating_Heat>2.00</ArmorRating_Heat> <!--写死热能防护-->
	<Insulation_Heat>10</Insulation_Heat> <!--写死抗热防护-->
    <Insulation_Cold>68</Insulation_Cold> <!--写死抗寒防护-->
	<ToxicResistance>1.00</ToxicResistance> <!--毒气防护-->
    <EMPResistance>0.60</EMPResistance> <!--EMP抗性系数，例如0.60表示将EMP伤害影响变为60%-->
	<MeleeHitChance>2</MeleeHitChance> <!--近战命中系数-->
    <MeleeDodgeChance>0.85</MeleeDodgeChance> <!--近战躲避系数-->
    <IncomingDamageFactor>0.75</IncomingDamageFactor> <!--承伤系数-->
	<EquipDelay>3</EquipDelay> <!--穿戴时间--> 
	</statBases>
	<generateCommonality>0.05</generateCommonality> <!--生成概率-->
	 <equippedStatOffsets> <!--对小人的影响-->
	   <SocialImpact>0.1</SocialImpact> <!--社交效果 可以不填 直接+百分比-->
	   <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.05</SlaveSuppressionOffset> <!--压制奴隶系数 可以不填 直接+百分比-->
    </equippedStatOffsets>
	<thingCategories> <!--分类--> 
	<li>Apparel</li>
	</thingCategories>
	<apparel>
	 <bodyPartGroups> <!--覆盖部位--> 
	  <li>Torso</li>
      <li>Neck</li>  
      <li>Shoulders</li>
      <li>Arms</li>    
      <li>Legs</li>
	 </bodyPartGroups>
	 <wornGraphicPath>Apparel/Heavyarmor/MunoRace_Apparel_Heavyarmor</wornGraphicPath> <!--穿着的贴图路径-->
	 <layers>
	  <li>Shell</li> <!--层级-->
	 </layers>
	 <tags> <!--标签-->
	  <li>Outlander</li>
	  <li>Spacer</li>
	 </tags>
	</apparel>  <!--不用颜色配置-->
	
	<!-- <tradeTags>
      <li>BasicClothing</li>
    </tradeTags> --> <!--贸易标签-->
	</ThingDef>
    
</Defs>
    