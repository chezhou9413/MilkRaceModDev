<?xml version="1.0" encoding="utf-8"?>
<Defs>

    
  	<!--以下为服装-->

    <ThingDef ParentName="MunoRace_Apparel">
  	<defName>MunoRace_Apparel_Mechanicalremote</defName>
    <label>缪诺机械遥控仪</label>
    <description>用于机械师操作机械体的轻型装备，能够提供更多带宽和控制组，但几乎没有防护能力</description>
    <graphicData>
   	<texPath>Apparel/HeadApparel/Mechanicalremote/MunoRace_Apparel_Mechanicalremote</texPath> <!--物件的贴图路径-->
	<graphicClass>Graphic_Single</graphicClass>
	<drawSize>1.1</drawSize>    <!--物品渲染大小-->
	</graphicData>
	<costList> <!--固定制作材料-->
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>100</Plasteel>
      <Uranium>20</Uranium>
   	</costList>
	<statBases>  <!--工作量 防护 保温等-->   
	<MaxHitPoints>350</MaxHitPoints>
	<WorkToMake>60000</WorkToMake>
	<Mass>6</Mass>
	<ArmorRating_Blunt>0.45</ArmorRating_Blunt> <!--写死钝击防护-->
    <ArmorRating_Sharp>0.96</ArmorRating_Sharp> <!--写死利器防护-->
	<ArmorRating_Heat>2.00</ArmorRating_Heat> <!--写死热能防护-->
	<Insulation_Heat>10</Insulation_Heat> <!--写死抗热防护-->
    <Insulation_Cold>68</Insulation_Cold> <!--写死抗寒防护-->
	<ToxicResistance>1.00</ToxicResistance> <!--毒气防护-->
    <EMPResistance>0.60</EMPResistance> <!--EMP抗性系数，例如0.60表示将EMP伤害影响变为60%-->
	<MeleeHitChance>2</MeleeHitChance> <!--近战命中系数-->
    <MeleeDodgeChance>0.85</MeleeDodgeChance> <!--近战躲避系数-->
    <IncomingDamageFactor>0.75</IncomingDamageFactor> <!--承伤系数-->
	<EquipDelay>3</EquipDelay> <!--穿戴时间--> 
	</statBases>
	<generateCommonality>0.05</generateCommonality> <!--生成概率-->
	 <equippedStatOffsets> <!--对小人的影响-->
	   <!-- <SocialImpact>0.2</SocialImpact> 社交效果 -->
    </equippedStatOffsets>
	<thingCategories>
	<li>Apparel</li>
	</thingCategories>
	<apparel>
	 <bodyPartGroups>
      <li>UpperHead</li>  
	 </bodyPartGroups>
	 <wornGraphicPath>AlienRace/MunoRace/Null/Null</wornGraphicPath> <!--穿着的贴图路径-->
	 <layers>
	  <li>Overhead</li>
	 </layers>
	 <tags>
	  <li>Outlander</li>
	  <li>Spacer</li>
	 </tags>
     <drawData>
          <scale>0.7</scale>
      </drawData>
	</apparel>

   
    <comps>
     <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Forbiddable" />
      <li>      
          <compClass>CompColorable</compClass>
      </li>            
      <li Class="ChezhouLib.comp.ApparelAddBodyAddonCompProperties">            
        <targetRaces>
          <li>MunoRace</li>          
        </targetRaces> 
		<bodyAddonHidden>
                    <!-- <li>Ogryn_Hairback</li> -->
                </bodyAddonHidden>
                <bodyAddonDefs>
                    <li>
                        <name>MunoRace_Apparel_Mechanicalremote</name>
                        <userCustomizable>true</userCustomizable>
                        <linkVariantIndexWithPrevious>true</linkVariantIndexWithPrevious>
                        <path>Apparel/HeadApparel/Mechanicalremote/MunoRace_Apparel_Mechanicalremote</path>
                        <colorChannel>apparel</colorChannel>
                        <inFrontOfBody>true</inFrontOfBody>
                        <layerInvert>false</layerInvert>
                        <drawSize>1.0</drawSize>
                        <scaleWithPawnDrawsize>true</scaleWithPawnDrawsize>
                        <alignWithHead>true</alignWithHead>
                        <conditions>
                            <BodyPart>
                                <bodyPart>Head</bodyPart>
                            </BodyPart>
                            <Apparel />
                            <Posture>
                                <drawnStanding>true</drawnStanding>
                                <drawnLaying>true</drawnLaying>
                                <drawnInBed>true</drawnInBed>
                            </Posture>
                        </conditions>
                        <offsets>
                            <west>
                                <layerOffset>0.16</layerOffset>
                                <offset>(0, 0)</offset>
                            </west>
                            <south>
                                <layerOffset>0.16</layerOffset>
                                <offset>(0, 0)</offset>
                            </south>
                            <north>
                                <layerOffset>0.16</layerOffset>
                                <offset>(0, 0)</offset>
                            </north>
                            <east>
                                <layerOffset>0.16</layerOffset>
                                <offset>(0, 0)</offset>
                            </east>
                        </offsets>
                    </li>
                </bodyAddonDefs>			               
      </li>            
    </comps>
	
	<!-- <tradeTags>
      <li>BasicClothing</li>
    </tradeTags> --> <!--贸易标签-->
	</ThingDef>
    
</Defs>
    