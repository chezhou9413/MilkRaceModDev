<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Muno_GalactogenEnhancement</defName>
    <label>乳源质增幅</label>
    <description>改变缪诺族的乳源质容量与恢复速度，高等级的增幅会带来副作用。</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.6, 0.8, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <initialSeverity>0.1</initialSeverity>
    <maxSeverity>5.0</maxSeverity>
    <stages>
      <li>
        <minSeverity>0.1</minSeverity>
        <label>稀少增幅</label>
        <statOffsets>
          <Muno_MaxGalactogen>50</Muno_MaxGalactogen>
          <Muno_GalactogenRecovery>0</Muno_GalactogenRecovery>
        </statOffsets>
      </li>
      <li>
        <minSeverity>1.0</minSeverity>
        <label>一般增幅</label>
        <statOffsets>
          <Muno_MaxGalactogen>175</Muno_MaxGalactogen>
          <Muno_GalactogenRecovery>6</Muno_GalactogenRecovery>
        </statOffsets>
      </li>
      <li>
        <minSeverity>2.0</minSeverity>
        <label>大量增幅</label>
        <hungerRateFactorOffset>0.75</hungerRateFactorOffset>
        <statOffsets>
          <Muno_MaxGalactogen>250</Muno_MaxGalactogen>
          <Muno_GalactogenRecovery>18</Muno_GalactogenRecovery>
        </statOffsets>
        <statFactors>
          <MoveSpeed>0.8</MoveSpeed>
        </statFactors>
      </li>
      <li>
        <minSeverity>3.0</minSeverity>
        <label>巨量增幅</label>
        <hungerRateFactorOffset>1.0</hungerRateFactorOffset>
        <statOffsets>
          <Muno_MaxGalactogen>350</Muno_MaxGalactogen>
          <Muno_GalactogenRecovery>38</Muno_GalactogenRecovery>
        </statOffsets>
        <statFactors>
          <MoveSpeed>0.6</MoveSpeed>
        </statFactors>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.8</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>4.0</minSeverity>
        <label>超巨量增幅</label>
        <hungerRateFactorOffset>1.25</hungerRateFactorOffset>
        <statOffsets>
          <Muno_MaxGalactogen>500</Muno_MaxGalactogen>
          <Muno_GalactogenRecovery>78</Muno_GalactogenRecovery>
        </statOffsets>
        <statFactors>
          <MoveSpeed>0.4</MoveSpeed>
        </statFactors>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.6</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>